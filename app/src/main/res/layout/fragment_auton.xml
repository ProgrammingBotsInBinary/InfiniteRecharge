<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/minusButton_lvl1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textview_lvl1"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_lvl1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_lvl1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/plusButton_lvl1"
        app:layout_constraintStart_toEndOf="@id/minusButton_lvl1"
        app:layout_constraintTop_toBottomOf="@id/header_lvl1"
        app:layout_constraintVertical_bias="0.0"
        />

    <Button
        android:id="@+id/plusButton_lvl1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_lvl1"
        app:layout_constraintTop_toBottomOf="@id/header_lvl1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/header_lvl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower Port"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/plusButton_lvl1"
        app:layout_constraintStart_toStartOf="@id/minusButton_lvl1"
        app:layout_constraintTop_toBottomOf="@id/edittext_team_number"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/header_lvl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outer Port"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/plusButton_lvl2"
        app:layout_constraintStart_toStartOf="@id/minusButton_lvl2"
        app:layout_constraintTop_toBottomOf="@id/textview_lvl1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/minusButton_lvl2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textview_lvl2"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_lvl2"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/plusButton_lvl2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toEndOf="@id/textview_lvl2"
        app:layout_constraintTop_toBottomOf="@id/header_lvl2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_lvl2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plusButton_lvl2"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/minusButton_lvl2"
        app:layout_constraintTop_toBottomOf="@id/header_lvl2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/header_lvl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inner Port"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/plusButton_lvl3"
        app:layout_constraintStart_toStartOf="@id/minusButton_lvl3"
        app:layout_constraintTop_toBottomOf="@id/textview_lvl2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/minusButton_lvl3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textview_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintTop_toBottomOf="@id/header_lvl3"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/textview_lvl3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/plusButton_lvl3"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@id/minusButton_lvl3"
        app:layout_constraintTop_toBottomOf="@id/header_lvl3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/plusButton_lvl3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toEndOf="@id/textview_lvl3"
        app:layout_constraintTop_toBottomOf="@id/header_lvl3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/header_line"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Did the robot move from initiation line?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_lvl3"
        app:layout_constraintVertical_bias="0.05" />

    <RadioGroup
        android:id="@+id/radiogroup_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/header_line"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/header_line"
        app:layout_constraintTop_toBottomOf="@id/header_line"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/line_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/line_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RadioGroup>

    <TextView
        android:id="@+id/header_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position on line:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radiogroup_line"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radiogroup_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/header_position"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@id/header_position"
        app:layout_constraintTop_toBottomOf="@id/header_position"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/powerport_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power Port" />

        <RadioButton
            android:id="@+id/loadingbay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading Bay" />

        <RadioButton
            android:id="@+id/far_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Far" />
    </RadioGroup>

    <TextView
        android:id="@+id/header_team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Number"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/header_match_number"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edittext_team_number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/header_team_number"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="@id/header_team_number"
        app:layout_constraintTop_toBottomOf="@+id/header_team_number"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/header_match_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Number"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@id/header_team_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edittext_match_number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/header_match_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/header_match_number"
        app:layout_constraintTop_toBottomOf="@+id/header_match_number"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>